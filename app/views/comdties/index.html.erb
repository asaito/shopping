  <tr>
    <td><%= comdty.shopcode %></td>
    <td><%= comdty.cmdtycode %></td>
    <td><%= comdty.jancode %></td>
    <td><%= comdty.cmdtyname %></td>
    <td><%= comdty.description %></td>
    <td><%= comdty.stockcode %></td>
    <td><%= comdty.stockunitprice %></td>
    <td><%= comdty.unitprice %></td>
    <td><%= comdty.salesunitprice %></td>
    <td><%= comdty.taxflg %></td>
    <td><%= comdty.adviceflg %></td>
    <td><%= comdty.bannerfile %></td>
    <td><%= comdty.bannerurl %></td>
    <td><%= comdty.memberdiscountflg %></td>
    <td><%= comdty.srchkeyname1 %></td>
    <td><%= comdty.srchkeyname2 %></td>
    <td><%= comdty.srchkeyname3 %></td>

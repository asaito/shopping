<style type="text/css">
table {
margin-bottom: 20px;
border-collapse: collapse;
}
td, th {
border: 1px #2b2b2b solid;
}
</style>

<td><font color="#F6633" size=4 ><b>顧客マスタ</b></font></td><br>
<table>
  <tbody>
  <tr style="border:0px">
  <td style="border:0px">
  <form method="POST" action="custs" name="cust">
    <table>
      <tbody>
        <th bgcolor="#800000"><font color="#ffffff"><%= t('検索項目') %></font></th>
        <th colspan=3 bgcolor="#800000"><font color="#ffffff"><%= t('検索条件') %></font></th>
        <div class="field">
          <tr>
          <td bgcolor="#FFFFCC"><b>顧客コード</b></td>
          <td colspan=1 style="border-top:1px #2b2b2b solid; border-bottom:1px #2b2b2b">
            <%= image_tag("lbl_S_HanSuuji.gif") %>
            <input name="id_serch" style="ime-mode:disabled" value=<%= $id_serch.to_s %>>&nbsp;&nbsp;<font color="blue">完全一致</font>
          </td>
        </div>
        <div class="field">
          <td bgcolor="#FFFFCC"><b>顧客名</b></td>
          <td colspan=1>
            <%= image_tag("lbl_S_Zen.gif") %>
            <input name="custname_serch" style="ime-mode:active" value=<%= $custname_serch %>>&nbsp;&nbsp;<font color="blue">部分一致</font>
          </td>
          </tr>
        </div>
        <div class="field">
          <tr>
          <td bgcolor="#FFFFCC"><b>会員種別</b></td>
          <td colspan=1>
            <%= image_tag("lbl_Tanitu.gif") %>
	      <%= select_tag("memberlevel_serch", options_for_select($memberlevel_list, $sel_memberlevel), :include_blank => true) %>
          </td>
        </div>
        <div class="field">
          <td bgcolor="#FFFFCC"><b>顧客名カナ</b></td>
          <td colspan=1>
            <%= image_tag("lbl_S_ZenKana.gif") %>
            <input name="custpronname_serch" style="ime-mode:active" value=<%= $custpronname_serch.to_s %>>&nbsp;&nbsp;<font color="blue">部分一致</font>
          </td>
          </tr>
        </div>
        <div class="field">
          <tr>
          <td bgcolor="#FFFFCC"><b>個人・法人区分</b></td>
          <td colspan=1>
            <%= image_tag("lbl_Tanitu.gif") %>
	    <%= radio_button_tag 'custcompanyflg_serch', 'both', $custcompanyflg_serch=='both'?true:false %>両方
	    <%= radio_button_tag 'custcompanyflg_serch', '0', $custcompanyflg_serch=="0"?true:false %>個人
	    <%= radio_button_tag 'custcompanyflg_serch', '1', $custcompanyflg_serch=="1"?true:false %>法人
          </td>
        </div>
        <div class="field">
          <td bgcolor="#FFFFCC"><b>メールアドレス</b></td>
          <td colspan=1>
            <%= image_tag("lbl_S_HanEisuu.gif") %>
            <input name="email_serch" style="ime-mode:disabled" value=<%= $email_serch %>>
          </td>
          </tr>
        </div>
        <div class="field">
          <tr>
          <td bgcolor="#FFFFCC"><b>新着</b></td>
          <td colspan=3>
            <%= image_tag("lbl_Tanitu.gif") %>
            <%= radio_button_tag 'newmailflg_serch', 'both', $newmailflg_serch=='both'?true:false %>両方
            <%= radio_button_tag 'newmailflg_serch', '0', $newmailflg_serch=='0'?true:false %>希望しない
            <%= radio_button_tag 'newmailflg_serch', '1', $newmailflg_serch=='1'?true:false %>希望する
          </td>
          </tr>
        </div>
      </tbody>
    </table>
  </td>
  <td style="border:0px">
    <table style="width:100;height:100px">
      <tbody>
        <div class="field" style="border:0px">
          <tr style="border:0px">
          <td style="border:0px">&nbsp;</td>
          </tr>
        </div>
        <div class="field">
          <tr style="border:0px">
          <td style="border:0px">
            <input id="serch" name="serch_image", type="image", src="/images/mallmgr/btn_L_Serch.gif" value="serch" >
          </td>
          </tr>
        </div>
        <div class="field">
          <tr style="border:0px">
          <td style="border:0px">
            <a href=<%= new_comdty_path%>?copy=0&cmdtycode=0><%= image_tag("mallmgr/btn_L_AddNewCust.gif") %></a>
          </td>
          </tr>
        </div>
        <div class="field">
          <tr style="border:0px">
          <td style="border:0px">
            <input id="outputcsv" name="outputcsv_image", type="image", src="/images/mallmgr/btn_L_OutputCsv.gif" value="outputcsv" >
          </td>
          </tr>
        </div>
        <div class="field">
          <tr style="border:0px">
          <td style="border:0px">
            <input id="sendnewmail" name="sendnewmail_image", type="image", src="/images/mallmgr/btn_L_SendNewMail.gif" value="sendnewmail" >
          </td>
          </tr>
        </div>
      </tbody>
    </table>
  </td>
  </tr>
  </tbody>
</table>

<table width=90%>
  <tr style="border:0px">
    <td style="border:0px">
      <input id="allselect" name="allsel_image", type="image", src="/images/mallmgr/btn_SS_AllSelect.gif" value="allselect" >
    </td>
    <td style="border:0px">
      <input id="allrelease" name="allrel_image", type="image", src="/images/mallmgr/btn_SS_NoSelect.gif" value="allrelease" >
    </td>
    <td colspan=2 style="border:0px">
      <%= will_paginate @custs, :prev_label=>'«前', :next_label=>'次»' %>
    </td>
    <td colspan=2 style="border:0px">
      <%= select_tag("line_no", options_for_select(@num_list, $sel_no_cm)) %>
    </td>
    <td colspan=4 style="border:0px">
      検索結果<%= @total %>件
    </td>
  </tr>

    <tr style="color:white; background-color:#800000">
      <th>顧客コード</th>
      <th>会員種別</th>
      <th>個・法</th>
      <th>顧客名</th>
      <th>顧客カナ</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>支払方法</th>
      <th>性別</th>
      <th>新着</th>
    </tr>

  <% @custs.each do |cust| %>
    <tr>
      <td><%= cust.id %></td>
      <td><%= cust.memberlevelcode %></td>
      <td><%= cust.custcompanyflg %></td>
      <td><%= cust.custname %></td>
      <td><%= cust.custpronname %></td>
      <td><%= cust.email %></td>
      <td><%= cust.tel %></td>
      <td><%= cust.paymethodcode %></td>
      <td align="center">
        <% if cust.sex == 0 %>
	  <%= image_tag("mallmgr/lbl_Boy.gif") %>
        <% else %>
	  <%= image_tag("mallmgr/lbl_Girl.gif") %>
        <% end %>
      </td>

      <td align="center">
	<% if cust.newmailflg == 1 %>
	 ○ 
	<% end %>
      </td>
    </tr>
  <% end %>
  <tr style="border:0px">
    <td style="border:0px">
      <input id="allselect" name="allsel_image", type="image", src="/images/mallmgr/btn_SS_AllSelect.gif" value="allselect" >
    </td>
    <td style="border:0px">
      <input id="allrelease" name="allrel_image", type="image", src="/images/mallmgr/btn_SS_NoSelect.gif" value="allrelease" >
    </td>
    <td style="border:0px">
    </td>
    <td style="border:0px">
    </td>
    <td style="border:0px">
    </td>
    <td colspan=2 align="center" style="border:0px">
      <input id="dm_submit" name="dm_image", type="image", src="/images/mallmgr/btn_L_DirectMailPDF.gif" value="DM" %>
    </td>

    <td colspan=2 align="center" style="border:0px">
      <input id="destroy_submit" name="del_image", type="image", src="/images/mallmgr/btn_L_Delete.gif" value="削除" %>
    </td>
  </tr>
</table>
  </form>
</table>


<br />

<%= link_to 'New Cust', new_cust_path %>

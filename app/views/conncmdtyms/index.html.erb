<style type="text/css">
table {
margin-bottom: 20px;
margin-left: 20px;
border-collapse: collapse;
}
td, th {
border: 1px #2b2b2b solid;
}
</style>

<td><font color="#F6633" size=4 ><b>関連商品マスタ</b></font></td><br>

<form method="POST" action="conncmdtyms" name="conncmdtym">

<table>
  <tr>
    <table style="width:640px;height:10px">
      <tr>
        <th bgcolor="#800000"><font color="#ffffff">商品コード</font></th>
        <th bgcolor="#800000"><font color="#ffffff">商品名</font></th>
      </tr>
      <tr>
        <td><%= @cmdtycode %></td>
          <input type="hidden" name="cmdtycode" value=<%= @cmdtycode %>>
          <input type="hidden" name="conncmdtyms_size" value=<%= @conncmdtyms_size %>>
        <td><%= @cmdtyname %></td>
          <input type="hidden" name="cmdtyname" value=<%= @cmdtyname %>>
        </td>
      </tr>
    </table>
  </tr>
  <tr>
    <table style="width:640px;height:10px">
      <tr>
        <th bgcolor="#800000"><font color="#ffffff">商品コード</font></th>
        <th bgcolor="#800000"><font color="#ffffff">商品名</font></th>
        <th bgcolor="#800000"><font color="#ffffff">表示順序</font></th>
        <th bgcolor="#800000"></th>
        <th bgcolor="#800000"></th>
      </tr>
      <% if @conncmdtyms != nil && @conncmdtyms != []  %>
	<% i = 0 %>
        <% @conncmdtyms.each do |ccm| %>
      <tr>
        <td>
              <%= ccm.conncmdtycode %>
          <input type="hidden" name="cmdtycoden[<%= i.to_s %>]" value=<%= ccm.conncmdtycode %>>
        </td>
        <td>
              <%= @names.first %>
          <input type="hidden" name="cmdtynamen[<%= i.to_s %>]" value=<%= @names.first %>> </td>
        <td>
          <input name="disporder[<%= i.to_s %>]" style="text-align:right;" type="text" value=<%= ccm.disporder %>>
        </td>
        <td align="center">
          <input id="update" name="update_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Update.gif" value="update" >
        </td>
        <td align="center">
          <input id="delete" name="delete_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Delete.gif" value="delete" >
        </td>
      </tr>
	<% i += 1 %>
	<% @names.shift %>
      <% end %>
    <% end %>
      <tr>
        <td>
          <input type="text" name="conncmdtycode" value=<%= @conncmdtycode %>>
        </td>
	<td><%= @conncmdtyname %></td>
	<td></td>
	<td align="center" colspan=2>
          <input id="add" name="confirm_image", type="image", src="/images/mallmgr/btn_S_AddNew.gif" value="confirm" >
	</td>
      </tr>
    </table>
    <table style="width:640px;height:10px">
      <tr style="border:0px">
        <td style="border:0px">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td style="border:0px">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td style="border:0px">
          <input id="close" name="close_image", type="image", src="/images/mallmgr/btn_L_Close.gif" value="close" >
        </td>
      </tr>
    </table>
  </tr>
</table>
</form>






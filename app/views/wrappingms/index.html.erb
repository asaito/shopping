<style type="text/css">
table {
margin-bottom: 20px;
border-collapse: collapse;
}
td, th {
border: 1px #2b2b2b solid;
}
</style>

<td><font color="#F6633" size=4 ><b>ラッピングマスタ</b></font></td><br>

<form method="POST" action="wrappingms" name="wrappingm">
<table>
  <tr>
    <th bgcolor="#800000"><font color="#ffffff">ラッピングコード</font></th>
    <th colspan=4 bgcolor="#800000"><font color="#ffffff">ラッピング名称</font></th>
  </tr>
  <tr>
    <td>
      <%= image_tag("lbl_Hissu.gif") %>
      <input type="text" name="wrappingcoden" style="ime-mode:disabled" value=<%= @wrappingm.wrappingcode %>>
    </td>
    <td colspan=4>
      <%= image_tag("lbl_Hissu.gif") %>
      <input type="text" name="wrappingnamen" style="ime-mode:active" value=<%= @wrappingm.wrappingname %>>
    </td>
  </tr>
  <tr>
    <th colspan=5 bgcolor="#800000"><font color="#ffffff">本文</font></th>
  </tr>
  <tr>
    <td colspan=5>
      <textarea cols="60" rows="4" name="descriptionn" style="ime-mode:active" value=<%= @wrappingm.description %>><%= @wrappingm.description %> </textarea>
    </td>
  </tr>
  <tr>
    <th bgcolor="#800000"><font color="#ffffff">価格</font></th>
    <th colspan=3 bgcolor="#800000"><font color="#ffffff">ラッピング税区分</font></th>
    <th bgcolor="#800000"><font color="#ffffff">画像ファイル名</font></th>
  </tr>
  <tr>
    <td>
      <%= image_tag("lbl_Hissu.gif") %>
      ￥
      <input type="text" name="pricen" style="text-align:right" value=<%= @wrappingm.price %>>
    </td>
    <td align="center" colspan=3>
      <input id="taxflgn" type="radio" name="taxflgn[taxincluded]" <%= (@wrappingm.taxflg==1?"checked":"") %>>税込
      <input id="taxflgn" type="radio" name="taxflgn[taxexcluded]" <%= (@wrappingm.taxflg==2?"checked":"") %>>税抜
      <input id="taxflgn" type="radio" name="taxflgn[notax]" <%= (@wrappingm.taxflg==3?"checked":"") %>>非課税
    </td>
    <td>
    </td>
  </tr>
  <tr>
    <td align="center" colspan=5>
          <input id="reset_image" name="reset_image", type="image", src="/images/mallmgr/btn_L_Reset.gif" value="reset" >
          <input id="confirm_submit" name="confirm_image", type="image", src="/images/mallmgr/btn_L_Confirm.gif" value="登録" >

    </td>
  </tr>
</table>
<table>
  <input type="hidden" name="line_no" value=<%= @line_no %>>
  <tr>
    <th bgcolor="#800000"><font color="#ffffff">ラッピングコード</font></th>
    <th bgcolor="#800000"><font color="#ffffff">ラッピング名</font></th>
    <th bgcolor="#800000"><font color="#ffffff">本文</font></th>
    <th bgcolor="#800000"><font color="#ffffff">画像ファイル名</font></th>
    <th bgcolor="#800000"><font color="#ffffff">価格</font></th>
    <th bgcolor="#800000"><font color="#ffffff">税区分</font></th>
    <th bgcolor="#800000"></th>
    <th bgcolor="#800000"></th>
  </tr>
  <% i = 0 %>
  <% @wrappingms.each do |wp| %> 
    <input type="hidden" name="wrappingcode[<%= i.to_s %>]" value=<%= wp.wrappingcode %>>
  <tr>
    <td><%= wp.wrappingcode %></td>
    <td><%= wp.wrappingname %></td>
    <td><%= wp.description %></td>
    <td></td>
    <td align="right">
      ￥<%= wp.price %></td>
    <td align="center"><%= wp.taxflg==1?"税込":(wp.taxflg==2?"税抜":"非課税") %>
    </td>
    <td>
      <input id="select" name="select_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Select.gif" value="選択" >
    </td>
    <td>
      <input id="delete" name="delete_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Delete.gif" value="削除" >
    </td>
  </tr>
    <% i += 1 %>
  <% end %>
</table>
</form>


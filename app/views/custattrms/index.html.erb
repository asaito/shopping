<style type="text/css">
table {
margin-bottom: 20px;
border-collapse: collapse;
}
td, th {
border: 1px #2b2b2b solid;
}
</style>

<td><font color="#F6633" size=4 ><b>顧客属性マスタ</b></font></td><br>
<form method="POST" action="custattrms" name="custattrm">
<table style="width:640px;height:10px">
  <tr>
    <th style="width:150px" bgcolor="#800000"><font color="#ffffff">項目&nbsp;&nbsp;&nbsp;</font></th>
    <th bgcolor="#800000"><font color="#ffffff">値</font></th>
  </tr>
  <tr>
    <td>
      <%= image_tag("lbl_Hissu.gif") %>
      顧客属性分類
    </td>
    <td>
      <%= image_tag("lbl_Tanitu.gif") %>
        <%= select_tag("custattrbmgroup", options_for_select(@custattrms_list, @sel_custattrm), :include_blank => false) %>
        <input id="select_submit" name="select_image", type="image", src="/images/mallmgr/btn_S_Select.gif" value="select" >
    </td>
  </tr>
  <tr>
    <td style="border:0px">&nbsp;
    </td>
  </tr>
  <tr>
    <td colspan=2 style="border:0px">
      <font color="#0000FF">顧客属性分類は、「<%= @sel_custattrm %>」を選択しています。</font>
    </td>
  </tr>
</table>
<table>
  <tr>
    <th bgcolor="#800000"><font color="#ffffff">表示順&nbsp;&nbsp;</font></th>
    <th style="width:250px" bgcolor="#800000"><font color="#ffffff">顧客属性名称</font></th>
    <th bgcolor="#800000"></th>
    <th bgcolor="#800000"></th>
  </tr>
    <input type="hidden" name="line_no" value=<%= @custattrms.size %> >
  <% i = 0 %>
  <% @custattrms.each do |at| %>
  <tr>
      <input type="hidden" name="id[<%= i.to_s %>]" value=<%= at.id %> >
    <td>
      <input type="text" style="ime-mode:disabled" name="disporder[<%= i.to_s %>]" value=<%= at.disporder %> >
    </td>
    <td>
      <input type="text" style="ime-mode:active" name="attrname[<%= i.to_s %>]" value=<%= at.attrname %> >
    </td>
    <td align="center">
      <input id="upd_submit" name="upd_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Update.gif" value="update" >
    </td>
    <td align="center">
      <input id="del_submit" name="del_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Delete.gif" value="delete" >
    </td>
  </tr>
      <% i += 1 %>
  <% end %>
  <tr>
    <td>
      <input type="text" style="ime-mode:disabled" name="dispordern" value=<%= @custattrm.disporder %> >
    </td>
    <td>
      <input type="text" style="ime-mode:active" name="attrnamen" value=<%= @custattrm.attrname %> >
    </td>
    <td colspan=2 align="center">
      <input id="new_submit" name="new_image", type="image", src="/images/mallmgr/btn_S_New.gif" value="new" >
    </td>
  </tr>
</table>
</form>


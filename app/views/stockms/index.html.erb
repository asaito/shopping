<style type="text/css">
table {
margin-bottom: 20px;
border-collapse: collapse;
}
td, th {
border: 1px #2b2b2b solid;
}
</style>

<td><font color="#F6633" size=4 ><b>仕入先マスタ</b></font></td><br>

<form method="POST" action="stockms" name="stockm">
<table>
  <tr>
  <th bgcolor="#800000"><font color="#ffffff">仕入先コード</font></th>
  <th colspan=3 bgcolor="#800000"><font color="#ffffff">仕入先名称</font></th>
  </tr>
  <tr>
    <td>
      <%= image_tag("lbl_Hissu.gif") %>
      <input type="text" name="stockcoden" style="ime-mode:disabled" value=<%= @stockm.stockcode %>>
    </td>
    <td colspan=3>
      <%= image_tag("lbl_Hissu.gif") %>
      <input type="text" name="stocknamen" style="ime-mode:active" value=<%= @stockm.stockname %>>
    </td>
  </tr>
  <tr>
  <th bgcolor="#800000"><font color="#ffffff">電話番号</font></th>
  <th bgcolor="#800000"><font color="#ffffff">FAX番号</font></th>
  <th bgcolor="#800000"><font color="#ffffff">担当者氏名</font></th>
  <th bgcolor="#800000"><font color="#ffffff">メールアドレス</font></th>
  </tr>
  <tr>
    <td>
      <input type="text" name="teln" style="ime-mode:disabled" value=<%= @stockm.tel %>>
    </td>
    <td>
      <input type="text" name="faxn" style="ime-mode:disabled" value=<%= @stockm.fax %>>
    </td>
    <td>
      <input type="text" name="chargeusernamen" style="ime-mode:active" value=<%= @stockm.chargeusername %>>
    </td>
    <td>
      <input type="text" name="emailn" style="ime-mode:disabled" value=<%= @stockm.email %>>
    </td>
  </tr>
  <tr> 
    <td align="center" colspan=4>
          <input id="reset_image" name="reset_image", type="image", src="/images/mallmgr/btn_L_Reset.gif" value="reset" >
          <input id="confirm_submit" name="confirm_image", type="image", src="/images/mallmgr/btn_L_Confirm.gif" value="登録" >

    </td>
  </tr>
</table>
<table>
  <input type="hidden" name="line_no" value=<%= @line_no %>>
  <tr>
  <th bgcolor="#800000"><font color="#ffffff">仕入先コード</font></th>
  <th bgcolor="#800000"><font color="#ffffff">仕入先名称</font></th>
  <th bgcolor="#800000"><font color="#ffffff">電話番号</font></th>
  <th bgcolor="#800000"><font color="#ffffff">FAX番号</font></th>
  <th bgcolor="#800000"><font color="#ffffff">担当者氏名</font></th>
  <th bgcolor="#800000"><font color="#ffffff">メールアドレス</font></th>
  <th bgcolor="#800000"></th>
  <th bgcolor="#800000"></th>
  </tr>
  <% i = 0 %>
  <% @stockms.each do |st| %>
    <input type="hidden" name="stockcode[<%= i.to_s %>]" value=<%= st.stockcode %>>
  <tr>
  <td><%= st.stockcode %></td>
  <td><%= st.stockname %></td>
  <td><%= st.tel %></td>
  <td><%= st.fax %></td>
  <td><%= st.chargeusername %></td>
  <td><%= st.email %></td>
  <td>
    <input id="select" name="select_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Select.gif" value="選択" >
  </td>
  <td>
    <input id="delete" name="delete_image[<%= i.to_s %>]", type="image", src="/images/mallmgr/btn_S_Delete.gif" value="削除" >
  </td>
  </tr>
    <% i += 1 %>
  <% end %>
</table>
</form>


